//print("-------------------");
//print("In INT 1");

alias physicalSP S0;
physicalSP = ([PTBR + 2 * (SP / 512)] * 512) + (SP % 512);

alias sysCallNo S1;
sysCallNo=[physicalSP-1];

alias filename S2;
filename=[physicalSP-3];//////////////////////////////

alias FATphysical S15;
alias DFphysical S14;
alias SPad S13;
alias BBphysical S12;
alias temp S11;
alias FATSPad S10;
alias SWOFTphysical S9;
alias BBindex S8;
alias FATindex S7;
alias block S6;

//Create()
if(sysCallNo==1)then
//print("CREATE");
//print("exist?");
	FATphysical=FAT;
	while(FATphysical<FAT+512)do
		if([FATphysical]==filename)then
			//print("exists");
			[physicalSP-2]=0;
			ireturn;
		else
			FATphysical=FATphysical+8;
		endif;
	endwhile;
//print("DF?0");
	DFphysical=DISK_LIST;
	while(DFphysical<DISK_LIST+448&&[DFphysical]==1)do
		DFphysical=DFphysical+1;
	endwhile;
	if(DFphysical==DISK_LIST+448)then
	//print("DF!0");
		[physicalSP-2]=-1;
		ireturn;
	endif;
//print("FAT?-1");
	FATphysical=FAT;
	while(FATphysical<FAT+512&&[FATphysical+2]!=-1)do
		FATphysical=FATphysical+8;
	endwhile;
	if(FATphysical>=FAT+512)then
		//print("FAT!-1");
		[physicalSP-2]=-1;
		ireturn;
	endif;
//print("FAT");
	[FATphysical]=filename;
	[FATphysical+1]=0;
	[FATphysical+2]=DFphysical%512;	
//print("BB");
	load(1,[FATphysical+2]);
	SPad=512;
	while(SPad<1024)do
		[SPad]=-1;
		SPad=SPad+1;
	endwhile;
	store(1,[FATphysical+2]);
//print("DF=1");	
	[DISK_LIST+[FATphysical+2]]=1;
//print("XFS");
	store(5,19);
	store(6,20);

	[physicalSP-2]=0;
//print("!CREATE");
	ireturn;
endif;

if(sysCallNo==4)then
//print("DELETE");
//print("exist?");
	FATphysical=FAT;
	while(FATphysical<FAT+512&&[FATphysical]!=filename)do
		FATphysical=FATphysical+8;
	endwhile;

	if(FATphysical>=FAT+512)then
		//print("!exist");
		[physicalSP-2]=-1;
		ireturn;
	endif;
	
	FATindex=(FATphysical%512)/8;
//print("open?");	
	SWOFTphysical=1344;
	while(SWOFTphysical<1472&&[SWOFTphysical]!=FATindex)do
		SWOFTphysical=SWOFTphysical+2;
	endwhile;
	
	if([SWOFTphysical]==FATindex&&SWOFTphysical<1472)then
		//print("open");
		[physicalSP-2]=-1;
		ireturn;
	endif;

//print("clear DBs");	
	load(1,[FATphysical+2]);
	BBphysical=SCRATCHPAD;
	while([BBphysical]!=-1 && [BBphysical]!="" && BBphysical<1024)do
		block=[BBphysical];
//		load(1,[BBphysical]);
		temp=SCRATCHPAD;
		while(temp<1024)do
			[temp]="";
			temp=temp+1;
		endwhile;
		store(1,block);
		load(1,[FATphysical+2]);
		//print("DF(DB)=0");
		[DISK_LIST+[BBphysical]]=0;
		BBphysical=BBphysical+1;
	endwhile;
//print("clear BB");	
	load(1,[FATphysical+2]);
	temp=512;
	while(temp<1024)do
		[temp]="";
		temp=temp+1;
	endwhile;
	store(1,[FATphysical+2]);
//print("DF(BB)=0");	
	[DISK_LIST+[FATphysical+2]]=0;
	store(6,20);
//print("FAT=-1,0,-1");	
	[FATphysical+0]=-1;
	[FATphysical+1]=0;
	[FATphysical+2]=-1;
	store(5,19);
	
	[physicalSP-2]=0;
//print("!DELETE");
	ireturn;
	
endif;
